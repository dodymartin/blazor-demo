
<div class="shadow pt-3 ps-3 pe-3 pb-1 mb-3 bg-white rounded border">
    <div class="d-flex flex-row align-items-center bg-light mt-0 p-1 border">
        <div class="d-flex flex-fill p-2">
            <input class="form-check-input me-3" @key="@TodoStep" type="checkbox" checked="@TodoStep.IsComplete" id="@TodoStep.Id" onchange="@(() => OnToggleComplete.InvokeAsync(TodoStep))" />
            <p class="form-check-label h4" for="@TodoStep.Id">@TodoStep.Name</p>
        </div>
        <div class="d-flex">
            <p>@TodoStep.CreateDate</p>
        </div>
        @if (TodoStep.IsComplete)
        {
            <div class="d-flex">
                <p>@TodoStep.CompleteDate</p>
            </div>
        }

        <div class="d-flex align-self-center pe-3" @onclick="() => OnDelete.InvokeAsync(TodoStep)">
            <button class="btn btn-outline-danger"><i class="oi oi-trash text-danger"></i></button>
        </div>
        <div class="d-flex align-self-center pe-3">
            <button class="bt btn-primary">Edit</button>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public TodoStepDto TodoStep { get; set; }
    [Parameter]
    public EventCallback<TodoStepDto> OnDelete { get; set; }
    [Parameter]
    public EventCallback<TodoStepDto> OnEdit { get; set; }
    [Parameter]
    public EventCallback<TodoStepDto> OnToggleComplete { get; set; }
}
