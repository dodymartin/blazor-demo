@typeparam TItem

<table class="table table-striped">
    <thead>
        @TableHeading
    </thead>
    <tbody>
        @foreach (TItem item in Items)
        {
            @TableBody(item)
        }
    </tbody>
</table>

@code {
    [Parameter]
    public RenderFragment TableHeading { get; set; } = default!;

    [Parameter]
    public RenderFragment<TItem> TableBody { get; set; } = default!;

    [Parameter]
    public IEnumerable<TItem> Items { get; set; } = new List<TItem>();
}